<?xml version="1.0" encoding="utf-8"?>
<!--Doctor_HistoryUpdateActivity-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <EditText
            android:id="@+id/inputDisease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Disease"
            android:inputType="text"
            android:minHeight="48dp"
            android:backgroundTint="#9E9E9E"
            android:padding="12dp" />

        <EditText
            android:id="@+id/inputPrescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Prescription"
            android:inputType="textMultiLine"
            android:minHeight="96dp"
            android:gravity="top"
            android:layout_marginTop="16dp"
            android:backgroundTint="#9E9E9E"
            android:padding="12dp" />

        <EditText
            android:id="@+id/inputProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Progress Notes"
            android:inputType="textMultiLine"
            android:minHeight="96dp"
            android:gravity="top"
            android:layout_marginTop="16dp"
            android:backgroundTint="#9E9E9E"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnSaveHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save History"
            android:layout_marginTop="32dp"
            android:backgroundTint="#0288D1"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
